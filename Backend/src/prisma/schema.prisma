generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  senha         String
  matricula     String    @unique 
  nome          String
  isadmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
}